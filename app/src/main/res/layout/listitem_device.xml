<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#f9f9f9"
android:padding="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_name"
            android:layout_toRightOf="@+id/device_image"
            android:layout_alignParentTop="true"
            android:textAppearance="?attr/textAppearanceListItem"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_address"
            android:layout_toRightOf="@+id/device_image"
            android:layout_below="@+id/device_name"
            android:textSize="10sp"
            android:textColor="#797676"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/device_details"
        android:layout_toRightOf="@+id/device_image"
        android:layout_below="@+id/device_address"
        android:textSize="10sp"
        android:textColor="#9dae97"
        />
        <TextView
            android:id="@+id/device_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/device_name"
            android:gravity="right"
            android:text="5:45"
            android:layout_marginRight="5dip"
            android:textSize="10sp"
            android:textColor="#c1d4d6"
            android:textStyle="bold"/>
        <!--
        <Button
            android:id="@+id/device_buttonconnect"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:textSize="14sp"
            android:text="Connect"
            android:background="@drawable/connect_button" />
-->


    </RelativeLayout>

</LinearLayout>
